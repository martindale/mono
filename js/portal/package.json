{
  "name": "@portal/portal",
  "version": "0.0.0",
  "description": "The Portal server",
  "bin": {
    "portal": "bin/portal.js"
  },
  "scripts": {
    "coverage": "c8 mocha",
    "lint": "standard",
    "lint-fix": "standard --fix",
    "nix": "node2nix -16 -l package-lock.json -o nix/packages.nix -e nix/env.nix",
    "posttest": "npm run lint",
    "test": "mocha"
  },
  "dependencies": {
    "web3-legacy": "melnx/web3.js#0.20.7"
  },
  "devDependencies": {
    "c8": "7.12.0",
    "chai": "4.3.6",
    "mocha": "10.0.0",
    "node2nix": "1.11.0",
    "standard": "17.0.0",
    "truffle": "^5.5.30"
  },
  "c8": {
    "check-coverage": true,
    "report-dir": "coverage",
    "reporter": [
      "html",
      "text"
    ]
  },
  "mocha": {
    "diff": true,
    "extension": [
      "spec.js"
    ],
    "recursive": true,
    "reporter": "spec",
    "slow": 1000,
    "timeout": 60000,
    "ui": "bdd",
    "watch-files": [
      "lib/**/*.js",
      "test/**/*.js"
    ]
  },
  "standard": {
    "globals": [
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "context",
      "describe",
      "expect",
      "it"
    ]
  }
}
