{
  "name": "portal",
  "version": "0.0.0",
  "description": "The Portal backend",
  "bin": {
    "portal": "bin/portal.js"
  },
  "scripts": {
    "clean": "rm -rf coverage node_modules package-lock.json",
    "coverage": "c8 mocha",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:js": "standard",
    "lint:sol": "solhint contracts/*.sol",
    "lint-fix": "npm run lint:js -- --fix && npm run lint:sol --fix",
    "posttest": "npm run lint",
    "debug": "DEBUG=* node bin/portal",
    "start": "node bin/portal",
    "test": "mocha test/unit",
    "test:unit": "mocha test/unit",
    "test:contracts": "mocha test/contracts",
    "test:integration": "mocha test/integration",
    "watch": "npm test -- --watch"
  },
  "dependencies": {
    "@ethersproject/bignumber": "^5.7.0",
    "cote": "^1.0.3",
    "debug": "^4.3.4",
    "ethereumjs-common": "^1.5.2",
    "ethereumjs-tx": "^2.1.2",
    "ethers": "^6.2.3",
    "level": "^8.0.0",
    "lightning": "^6.2.6",
    "mime": "^3.0.0",
    "uuid": "^9.0.0",
    "web3": "^1.8.2",
    "web3melnx": "github:melnx/web3.js#0.20.7",
    "ws": "^8.10.0"
  },
  "devDependencies": {
    "c8": "^7.12.0",
    "chai": "^4.3.7",
    "keythereum": "^2.0.0",
    "mocha": "^10.2.0",
    "solc": "^0.7.6",
    "solhint": "^3.3.7",
    "standard": "^17.0.0",
    "web3": "^1.8.2"
  },
  "c8": {
    "check-coverage": true,
    "report-dir": "coverage",
    "reporter": [
      "html",
      "text"
    ]
  },
  "mocha": {
    "diff": true,
    "extension": [
      "spec.js"
    ],
    "recursive": true,
    "reporter": "spec",
    "slow": 1000,
    "timeout": 120000,
    "ui": "bdd",
    "watch-files": [
      "contracts/**/*.sol",
      "lib/**/*.js",
      "test/**/*.js"
    ]
  },
  "standard": {
    "globals": [
      "after",
      "afterEach",
      "artifacts",
      "before",
      "beforeEach",
      "context",
      "describe",
      "expect",
      "it",
      "xit"
    ]
  }
}
