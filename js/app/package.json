{
  "name": "@portaldefi/app",
  "version": "0.0.0",
  "description": "The Portal App",
  "source": "src/index.html",
  "scripts": {
    "build": "parcel build",
    "clean": "rm -rf dist node_modules package-lock.json",
    "coverage": "c8 mocha",
    "dev": "node bin/dev.js",
    "lint": "standard",
    "lint-fix": "standard --fix",
    "posttest": "npm run lint",
    "test": "mocha"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@portaldefi/peer": "file:../portal",
    "@portaldefi/sdk": "file:../sdk",
    "c8": "^7.12.0",
    "chai": "^4.3.7",
    "chokidar": "^3.5.3",
    "mocha": "^10.2.0",
    "parcel": "^2.9.3",
    "standard": "^17.0.0"
  },
  "c8": {
    "check-coverage": true,
    "report-dir": "coverage",
    "reporter": [
      "html",
      "text"
    ]
  },
  "mocha": {
    "diff": true,
    "extension": [
      "spec.js"
    ],
    "recursive": true,
    "reporter": "spec",
    "slow": 1000,
    "timeout": 120000,
    "ui": "bdd",
    "watch-files": [
      "src/**/*.js",
      "test/**/*.js"
    ]
  },
  "standard": {
    "globals": [
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "context",
      "describe",
      "expect",
      "it"
    ],
    "ignore": [
      "dist"
    ]
  }
}
